{
    "output": "eDP-1", // nome da primeira tela

    "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    "width": 1360, // Waybar width
    "margin": 5,
    "spacing": 4,

    "modules-left": [
          "custom/power",
          "clock",
          "network"
          
          
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "temperature",
        "pulseaudio",
        "cpu",
        "memory",
        "backlight",
        "battery#bat2",
        "battery",
        "tray"
    ],


    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
